<main>

  <section class="county-description">

    <% if user_signed_in? %>

      <%= form_for ([@county.state, @county]) do |f| %>

        <%= f.text_area :description %>

        <%= f.submit %>

      <% end %>

    <% else %>

      <% if @county.description.length > 0 %>

        <%= @county.description %>

        <% end %>

    <% end %>

  </section>

  <section class="mugshots">

    <%= render '/mugshots/mugshots' %>

  </section>

  <%= will_paginate @mugshots %>

</main>
