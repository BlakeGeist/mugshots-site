<!DOCTYPE html>
<html class="<%= "#{controller_name}-#{controller.action_name}-page" %>">
  <head>
    <%# start meta title %>
      <title>
        <%# if the title var exisits %>
        <% if @title %>
          <%= @title %>
        <% else %>
          Local Mugshots
        <% end %>
      </title>
    <%# end meta title %>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="<% if @description %><%= @description %><% else %>Local Mugshots<% end %>" />
    <link rel="canonical" href="<%= @canonical_url %>" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%# start analytics code %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-90711142-1', 'auto');
        ga('send', 'pageview');
      </script>
    <%# end analytics code %>
  </head>
  <body>
    <header>
      <nav class="nav" data-expander>
        <div class="nav-item"><%= link_to 'Home', root_path %> <a class="is-mobile" data-toggle="is-open" href=""><%= image_tag ('menu.png'), class: 'menu-image' %></a> <span class="nav-item-line">|</span></div>
        <div class="nav-item"><%= link_to 'Ada County', state_county_path("idaho", "ada") %> <span class="nav-item-line">|</span></div>
        <div class="nav-item"><%= link_to 'Canyon County', state_county_path("idaho", "canyon") %> <span class="nav-item-line">|</span></div>
        <div class="nav-item"><%= link_to 'Horry County', state_county_path("south-carolina", "horry") %> <span class="nav-item-line">|</span></div>
        <div class="nav-item"><%= link_to 'Charleston County', state_county_path("south-carolina", "charleston") %> <span class="nav-item-line">|</span></div>
        <div class="nav-item"><%= link_to 'Mecklenburg County', state_county_path("south-carolina", "mecklenburg") %></div>
        <% if user_signed_in? %>
         <div class="nav-item"><span class="nav-item-line">|</span> <%= link_to "Sign out", destroy_user_session_path, method: :delete %></div>
        <% end %>
      </nav>
    </header>
    <%= yield %>
    <footer class="footer">
    </footer>
  </body>
</html>
